<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/imageviewMonan"
        android:scaleType="fitXY"
        android:layout_margin="5dp"
        android:layout_width="150dp"
        android:layout_height="120dp" />
    <TextView
        android:textColor="#f20"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:textSize="28sp"
        android:id="@+id/textviewtenMoan"
        android:text="Ten mon an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/textviewtenMoan"
        android:textColor="#3974c2"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewMonan"
        android:textSize="28sp"
        android:id="@+id/textviewgiaMoan"
        android:text="Gia mon an"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>